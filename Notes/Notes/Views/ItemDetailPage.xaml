<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Course" FontSize="Medium" />
        <Picker x:Name="NoteCourse" FontSize="Medium">
            <Picker.ItemsSource>
                <x:Array  Type="{x:Type x:String}">
                    <x:String>Course 1</x:String>
                    <x:String>Course 2</x:String>
                    <x:String>Course 3</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Label Text="Heading:" FontSize="Medium"/>
        <Entry x:Name="NoteHeading" FontSize="Medium" />

        <Label Text="Text:" FontSize="Medium" />
        <Editor x:Name="NoteText"  FontSize="Medium"/>


    </StackLayout>
    
</ContentPage>